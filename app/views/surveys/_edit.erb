<div>


    <form action="/surveys/<%= @survey.id %>" method="POST">
      <input type="hidden" name="_method" value="put" />

      <label>Edit Survey:</label><br>
      <input type="text" value="<%= @survey.title %>" name="survey[title]"><br>
      <textarea rows="10" cols="50" name="survey[description]"><%= @survey.description %></textarea><br><br>

      <label>Edit Questions:</label><br>
      <% @survey.questions.each do |question| %>
        <textarea rows="2" cols="50" name="question[ask]"><%= question.ask %></textarea><br>

          <label>Edit Choices:</label><br>
          <% question.choices.each do |choice| %>
            <input type="text" value="<%= choice.decision %>" name="choice[decision]"><br>
          <% end %> <br> <br>

      <% end %>
      <input type="submit" value="Save">
    </form>


</div>

