<div>

    <%= @survey.description %>
    <br><br>
      <form action="/surveys/<%= @survey.id %>" method="POST">

        <% @survey.questions.each do |question| %>

          <h3><%= question.ask %></h3>

          <% question.choices.each do |choice| %><br>
            <input type="radio" name="<%= question.id %>" value=<%= choice.id %>><%= choice.decision %>
          <% end %>

          <br><br>
        <% end %>

        <input type="submit" value="Submit"><br><br>
      </form>

</div>

